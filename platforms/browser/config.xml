<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pouryourcup.pouryourcup" ios-CFBundleVersion="27" version="1.2.9" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Badge">
        <param name="browser-package" value="Badge" />
    </feature>
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Pour Your Cup</name>
    <description>
        The MicroGenerosity app for the Generosity Economy
    </description>
    <author email="hello@pouryourcup.com" href="https://www.pouryourcup.com">
        Raymond Tsao - Pour Your Cup
    </author>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="Orientation" value="portrait" />
</widget>
